{
    "_version": "1.12.0",
    "sap.app": {
      "id": "app",
      "type": "application",
      "i18n": "modules/mainmodule/i18n/i18n.properties",
      "title": "{{appTitle}}",
      "description": "{{appDescription}}",
      "applicationVersion": {
        "version": "1.0.0"
      }
    },
    "sap.ui": {
      "technology": "UI5",
      "deviceTypes": {
          "desktop": true,
          "tablet":  true,
          "phone":   true
      }
    },
    "sap.ui5": {

        "rootView": {
            "viewName": "mainpath.view.Main",
            "type":  "XML",
            "async": true,
            "id":    "app"
        },

        "dependencies": {
            "minUI5Version": "1.60",
            "libs": {
                "sap.m": {}
            },
            "contentDensities": {
              "compact": true,
              "cozy": true
            }
        },

        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": { "bundleName": "mainpath.i18n.i18n" }
            },
            "myModel": {
              "type": "sap.ui.model.json.JSONModel",
              "uri": "/modules/mainmodule/models/goods.json"
            }
        },

        "routing": {

          "config": {
            "routerClass": "sap.m.routing.Router",
            "viewType":    "XML",
            "viewPath":    "app.modules.mainmodule.view",
            "controlAggregation": "detailPages",
            "controlId":   "SplitAppDemo",
            "async": true,
            "transition": "slide",
            "bypassed": {
              "target": "notFound"
           }
          },

          "routes": [
            {
              "pattern": "",
              "name":    "start",
              "target":  ["_mainmenu", "_news"]
            },
            {
              "pattern": "catalog",
              "name":    "categories",
              "target":  ["_categoriesList", "_articles"]
            },
            {
              "pattern": "catalog/{category}",
              "name":    "types",
              "target":  ["_typeList", "_articles"]
            },
            {
              "pattern": "catalog/{category}/{type}",
              "name":    "articles",
              "target":  ["_typeList", "_articles"]
            },
            {
              "pattern": "catalog/{category}/{type}/{article}",
              "name":    "article",
              "target":  ["_typeList", "_article"]
            },
            {
              "pattern": "to_order",
              "name":    "to_order",
              "target":  ["_mainmenu", "_toOrder"]
            },
            {
              "pattern": "callback",
              "name":    "callback",
              "target":  ["_mainmenu", "_callback"]
            },
            {
              "pattern": "contacts",
              "name":    "contacts",
              "target":  ["_mainmenu", "_contacts"]
            }
          ],

          "targets": {           
            "notFound": {
               "viewId": "notFound",
               "viewName": "NotFound",
               "transition": "show"
            },
            "_mainmenu":{
              "viewId":   "mainmenu",
              "viewName": "Mainmenu",
              "controlAggregation": "masterPages",
              "transition": "show"
            },
            "_news":{
              "viewId":   "news",
              "viewName": "News",
              "controlAggregation": "detailPages",
              "transition": "show"
            },
            "_categoriesList": {
              "viewId":   "categoriesList",
              "viewName": "CategoriesList",
              "controlAggregation": "masterPages",
              "transition": "show"              
            },
            "_categories": {
              "viewId":   "categories",
              "viewName": "Categories",
              "controlAggregation": "detailPages",
              "transition": "show"              
            },
            "_typeList": {
              "viewId":   "typeList",
              "viewName": "TypeList",
              "controlAggregation": "masterPages",
              "transition": "show"              
            },
            "_types": {
              "viewId":   "types",
              "viewName": "Types",
              "controlAggregation": "detailPages",
              "transition": "show"              
            },
            "_articles": {
              "viewId":   "articles",
              "viewName": "Articles",
              "controlAggregation": "detailPages",
              "transition": "show"              
            },
            "_article": {
              "viewId":   "article",
              "viewName": "Article",
              "controlAggregation": "detailPages",
              "transition": "slide"              
            },
            "_toOrder": {
              "viewId":   "toOrder",
              "viewName": "ToOrder",
              "controlAggregation": "detailPages",
              "transition": "show"              
            },
            "_callback": {
              "viewId":   "callback",
              "viewName": "Callback",
              "controlAggregation": "detailPages",
              "transition": "show"              
            },
            "_contacts": {
              "viewId":   "contacts",
              "viewName": "Contacts",
              "controlAggregation": "detailPages",
              "transition": "show" 
            }
        }
    }
}
}