<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<ResponsivePopover
		title="Сортировка списка артикулов"
		class="sapUiPopupWithPadding"
		placement="Top" 
        >
            <beginButton>
                <Button text="Сохранить"/>
            </beginButton>
            <endButton>
                <Button text="Отменить и выйти"/>
            </endButton>
            <content>
                <VBox>
                    <RadioButtonGroup selectedIndex="{myModel>/Sorting/sortingKind}">
                        <RadioButton text="По возрастанию"/>
                        <RadioButton text="По убыванию"/>
                    </RadioButtonGroup>
                    <RadioButtonGroup class="sapUiSmallMarginTop" selectedIndex="{myModel>/Sorting/sortingType}">
                        <RadioButton text="По артикулу"/>
                        <RadioButton text="По названию"/>
                        <RadioButton text="По цене"/>
                    </RadioButtonGroup>
                </VBox>
            </content>
	</ResponsivePopover>
</core:FragmentDefinition>