<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<ResponsivePopover
		title="Выбранные артикулы"
		class="sapUiPopupWithPadding"
		placement="Top" 
        content="{myModel>/Cart}">
		<beginButton>
			<Button text="Очистить" press="clearCart" />
		</beginButton>
		<endButton>
			<Button text="Перейти к оформлению заказа" press="handleCloseButton" />
		</endButton>
		<content>
			<List	
				mode="Delete"
				delete="deleteFromCart">
				<items>
					<StandardListItem 
						title="{myModel>article_name}"
						icon="{myModel>article_image_path}"
						type="Navigation" 
						press="onCartItemPress">
						<layoutData>

						</layoutData>
					</StandardListItem>	
				</items>
			</List>

		</content>
	</ResponsivePopover>
</core:FragmentDefinition>