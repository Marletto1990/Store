<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="app.modules.mainmodule.controller.News"
	xmlns="sap.m">
		<Page
			id="news" 
			title="Страница с акциями и новостями" 
			class="sapUiStdPage">
			<Button text="Get some news!" press = "onNewsButtonPress"/>
			<content>
				<Breadcrumbs 	
					currentLocationText="{myModel>/Remote_current/title}" 
					class = "sapUiSmallMarginBegin sapUiSmallMarginTop"
					links = "{myModel>/Remote}">
					<Link press="onBreadcrumbsPress" text="{myModel>title}"/>
				</Breadcrumbs>
			</content>
		</Page>
</mvc:View>