<mvc:View xmlns:mvc="sap.ui.core.mvc"
		   xmlns="sap.uxap"
		   xmlns:layout="sap.ui.layout"
		   xmlns:m="sap.m"
            xmlns:personal="sap.uxap.sample.SharedBlocks.personal"
	        controllerName="mainpath.controller.Article"
		   height="100%">

        <ObjectPageLayout 
                id="articlePage" 
                enableLazyLoading="false" 
                showTitleInHeaderContent="true"
                subSectionLayout="TitleOnTop">
            <headerTitle>        
                <ObjectPageHeader 
                        objectImageURI="{myModel>/ArticleCurrent/article_image_path}"
                        objectTitle="{myModel>/ArticleCurrent/article_name}"
                        objectImageAlt="Изделие"
                        isObjectTitleAlwaysVisible="false">

                        <actions>
                            <ObjectPageHeaderActionButton 
                                id="cartAddButton"
                                icon="sap-icon://cart-3" 
                                text="Добавить в заявку" 
                                type="Emphasized" 
                                tooltip="pull-down" 
                                hideText="false"
                                press="addOrRemoveToCart"/>
                            <ObjectPageHeaderActionButton 
                                icon="sap-icon://show" 
                                text="Перейти к оформлению" 
                                tooltip="show" 
                                hideText="false"/>
                            <ObjectPageHeaderActionButton 
                                text="Toggle Footer" 
                                hideIcon="true" 
                                hideText="false" 
                                press="toggleFooter"/>
                        </actions>

                        <breadcrumbs>
                            <m:Breadcrumbs 
                            links = "{myModel>/Remote}"
                            id="breadcrumbsId" 
                            currentLocationText="{myModel>/Remote_current/title}" >
                                <m:Link press="onBreadcrumbsPress" text="{myModel>title}"/>
                            </m:Breadcrumbs>
                        </breadcrumbs>

                </ObjectPageHeader>
		    </headerTitle>
            <headerContent>

                <layout:HorizontalLayout>   
                    <layout:VerticalLayout>
                        <m:VBox height="63px" class="sapUiSmallMargin">
                            <m:Label text="Цена"  class="bigText"/>
                            <m:Label text="{myModel>/ArticleCurrent/article_price} руб." class="bigText"/>
                        </m:VBox>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout>
                        <m:VBox height="63px" class="sapUiSmallMargin">
                            <m:Label text="Оценка заказчиков" class="bigText"/>
                            <m:RatingIndicator 
                                    id="RI_default" 
                                    maxValue="5" 
                                    class="sapUiSmallMarginBottom" 
                                    value="4" 
                                    tooltip="Rating Tooltip" 
                                    displayOnly= "true"/>
                        </m:VBox>
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
		    </headerContent>
            <sections>

			    <ObjectPageSection title="Характеристики">
                    <subSections>
                        <ObjectPageSubSection blocks="{myModel>/ArticleCurrent/description2}">
                            <m:VBox>
                                <m:Label text="{myModel>property}"/>
                                <m:Text text="{myModel>value}"/>
                            </m:VBox>
                        </ObjectPageSubSection>
                    </subSections>
                    <subSections>
                        <ObjectPageSubSection>
                            <m:VBox>
                                <m:Label text="A little bit of Lorem ipsum things" class="sapUiSmallMarginBottom"/>
                                <m:Text text="{myModel>/ArticleCurrent/loremIpsum1}"/>
                            </m:VBox>
                        </ObjectPageSubSection>
                    </subSections>
                    <subSections>
                        <ObjectPageSubSection>
                            <m:VBox>
                                <m:Label text="And more of Lorem ipsum" class="sapUiSmallMarginBottom"/>
                                <m:Text text="{myModel>/ArticleCurrent/loremIpsum2}"/>
                            </m:VBox>
                        </ObjectPageSubSection>
                    </subSections>
			    </ObjectPageSection>
			    
                <ObjectPageSection title="Фотографии">
                    <subSections>
                        <ObjectPageSubSection title="Фотографии">
                            <m:Carousel class="sapUiContentPadding" loop="true">
                                <m:pages>
                                    <m:Image src="{myModel>/ArticleCurrent/article_big_image_path}" alt="Example picture of speakers"/>

                                    <m:Image src="{myModel>/ArticleCurrent/article_big_image_path}" alt="Example picture of USB flash drive"/>

                                    <m:Image src="{myModel>/ArticleCurrent/article_big_image_path}" alt="Example picture of spotlight"/>

                                    <m:Image src="{myModel>/ArticleCurrent/article_big_image_path}" alt="Example picture of screw"/>

                                </m:pages>
	                        </m:Carousel>
                        </ObjectPageSubSection>
                    </subSections>
			    </ObjectPageSection>
		    </sections>
        </ObjectPageLayout>
</mvc:View>