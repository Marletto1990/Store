<mvc:View xmlns:mvc="sap.ui.core.mvc"
		   xmlns="sap.uxap"
		   xmlns:layout="sap.ui.layout"
		   xmlns:m="sap.m"
	        controllerName="mainpath.controller.Article"
		   height="100%">

        <ObjectPageLayout id="articlePage" enableLazyLoading="false" showTitleInHeaderContent="false">
            <headerTitle>        
                <ObjectPageHeader 
                              objectImageURI="{myModel>/ArticleCurrent/article_image_path}"
							  objectTitle="{myModel>/ArticleCurrent/article_name}"
							  objectImageShape="Circle"
							  objectImageAlt="Изделие"
							  objectSubtitle="{myModel>/ArticleCurrent/article_material}">
                <actions>
					<ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section" type="Emphasized" tooltip="pull-down"/>
					<ObjectPageHeaderActionButton icon="sap-icon://show" text="show state" tooltip="show"/>
					<ObjectPageHeaderActionButton text="Toggle Footer" hideIcon="true" hideText="false" press="toggleFooter"/>
				</actions>
                <breadcrumbs>
					<m:Breadcrumbs 
                    links = "{myModel>/Remote}"
                    id="breadcrumbsId" 
                    currentLocationText="{myModel>/Remote_current/title}" >
						<m:Link press="onBreadcrumbsPress" text="{myModel>title}"/>
					</m:Breadcrumbs>
				</breadcrumbs>
                </ObjectPageHeader>
		    </headerTitle>
            <headerContent>

                <layout:HorizontalLayout>
                    <m:Image src="{myModel>/ArticleCurrent/article_image_path}" height="6em"/>
                </layout:HorizontalLayout>

                <layout:VerticalLayout>
                    <m:Label text="Стоимость одного экземпляра"/>
                    <m:VBox height="63px">
                        <m:Label text="Achieved goals"/>
                        <m:ProgressIndicator
                                percentValue="30"
                                displayValue="30%"
                                showValue="true"
                                state="None"/>
                    </m:VBox>
                </layout:VerticalLayout>

		    </headerContent>
            <sections>
                <ObjectPageSection title="2014 Goals Plan">
                    <subSections>
                        <ObjectPageSubSection title=" ">
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>

                <ObjectPageSection title="Personal">
                    <subSections>
                        <ObjectPageSubSection title="Connect">
                        </ObjectPageSubSection>

                        <ObjectPageSubSection id="paymentSubSection" title="Payment information">
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>

			    <ObjectPageSection title="Employment">
                    <subSections>
                        <ObjectPageSubSection title="Job information">
                            <m:Text text = "Test"/>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection title="Employee Details" mode="Collapsed">
                            <m:Text text = "Test"/>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection title="Job Relationship" mode="Collapsed">
                            <m:Text text = "Test"/>
                        </ObjectPageSubSection>
                    </subSections>
			    </ObjectPageSection>
		    </sections>
        </ObjectPageLayout>
</mvc:View>