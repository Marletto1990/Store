<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="mainpath.controller.mainController"
	xmlns="sap.m">
	<SplitApp 
			id="SplitAppDemo" 
			initialDetail="detail" 
			initialMaster="master" 
			orientationChange="onOrientationChange"
			mode="PopoverMode">
		<detailPages>
			<Page 
				id="detail" 
				title="Лучшие цены во вселенной" 
				class="sapUiStdPage">
				<content>
					<Panel
						id="container_first_page"
						content = "{myModel>/Articles}">
						<GenericTile 
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout imageClass" 
							header="{myModel>article_name}"
							subheader="{myModel>article_material}" 
							press="onArticleItemPress"
							frameType="TwoByOne">
								<TileContent footer="Цена: {myModel>article_price} руб." footerColor="Critical">
									<HBox
										alignItems="End"
										justifyContent="End">
										<Image
											src="{myModel>article_image_path}"
											height="6em"
											width="6em">
										</Image>
										
									</HBox>
								</TileContent>
						</GenericTile>
					</Panel>
				</content>
			</Page>
			<Page 
				id="protectiveConstructions" 
				title="Отбойники из черного металла" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack"
				content = "{myModel>/Articles}">
				<content>
					<VBox class="sapUiSmallMargin">
						<Label text="Отбойники из черного металла" />
					</VBox>
				</content>
			</Page>
			<Page 
				id="FrameConstructions" 
				title="Каркасные конструкции, навесы" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack">
				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
			<Page 
				id="StainlessSteelFurniture" 
				title="Мебель из нержавеющей стали" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack">
				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
			<Page 
				id="articlePage" 
				title="Страница товара" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack">
				<content>
					<VBox				
						class="sapUiTinyMarginBegin sapUiLargeMarginTop" 
						alignItems="Center"
						justifyContent="Center">
						<Image
							id="bigImage"
							src="{myModel>/ArticleCurrent/article_big_image_path}"
							height="16em"
							width="">
						</Image>					
					</VBox>
					<VBox
						class="sapUiTinyMarginBegin sapUiLargeMarginTop" 
						alignItems="Center"
						justifyContent="Center">
						<Text 
							text="{myModel>/ArticleCurrent/description}"
							class="sapUiTinyMarginBegin sapUiLargeMarginTop"/>
						<Button 
							id="artButton" 
							text="Заказать {myModel>/ArticleCurrent/article_name}"
							class="sapUiTinyMarginBegin sapUiLargeMarginTop"/>
					</VBox>	
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page 
				id="master" 
				title="Steel Store" 
				icon="sap-icon://action" 
				class="sapUiStdPage">
				<content>
					<List 
						items = "{myModel>/Menu}">

						<items>
							<StandardListItem 
							title="{myModel>title}" 
							type="{path:'myModel>show_nav_button', 
							formatter:'.menuItemType'}" 
							press="onMenuItemPress"/>
						</items>
					</List>
				</content>
			</Page>
			<Page 
				id="catalog" 
				title="Уточните категорию" 
				icon="sap-icon://action" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonPress="onPressMasterBack">
				<content>
					<List
						items = "{myModel>/Categories}" id="catList">
						<items>
							<StandardListItem 
								title="{myModel>title}"
								type="Navigation" 
								press="onMenuItemPress2"/>
						</items>
					</List>
				</content>
			</Page>
			<Page 
				id="typePage" 
				title="Уточните категорию" 
				icon="sap-icon://action" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonPress="onPressMasterBack">
				<content>
					<List items = "{myModel>/Categories}" id="typeList">
						<items>
							<StandardListItem 
								title="{myModel>type_name}" 
								type="Navigation" 
								press="onMenuItemPress3"/>
						</items>
					</List>
				</content>
			</Page>
			<Page 
				id="articles" 
				title="Выберите товар" 
				icon="sap-icon://action" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonPress="onPressMasterBack">
				<content>
					<List items = "{myModel>/Articles}" id="articlesList">
						<items>
							<StandardListItem 
								title="{myModel>article_name}" 
								type="Active" 
								press="onArticleItemPress"/>
						</items>
					</List>
				</content>
			</Page>

		</masterPages>
	</SplitApp>
</mvc:View>