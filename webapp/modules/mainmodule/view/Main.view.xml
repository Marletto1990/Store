<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="mainpath.controller.mainController"
	xmlns="sap.m">
	<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<detailPages>
			<Page 
				id="detail" 
				title="АКЦИЯ !" 
				class="sapUiStdPage">
				<content>
					<f:SimpleForm 
						id="SimpleFormChange354" 
						editable="true" 
						layout="ResponsiveGridLayout" >
						<f:content>
							<Panel 
								width="auto" 
								class="sapUiResponsiveMargin" 
								accessibleRole="Region">
								<headerToolbar>
									<Toolbar height="5rem">
										<Title text="Скидка дня:"/>
									</Toolbar>
								</headerToolbar>
								<content>
									<l:HorizontalLayout>
										<Image src="/modules/mainmodule/images/T2.jpeg"/>
										<Image src="/modules/mainmodule/images/T7.jpeg"/>
										<Image src="/modules/mainmodule/images/T8.jpeg"/>
										<Image src="/modules/mainmodule/images/T11.jpeg"/>
									</l:HorizontalLayout>
									<Text text="Успейте купить нашу хрень со скидкой. Стоимость доставки не учтена." />
									<Button text = "Shut up and take my money!"/>
								</content>
							</Panel>
						</f:content>
					</f:SimpleForm>

				</content>
			</Page>
			<Page 
				id="ProtectiveConstructions" 
				title="Отбойники из черного металла" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack">
				<content>
					<VBox class="sapUiSmallMargin">
						<Label text="This is Detail Page2" />
					</VBox>
				</content>
			</Page>
			<Page 
				id="FrameConstructions" 
				title="Каркасные конструкции, навесы" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack">
				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
			<Page 
				id="StainlessSteelFurniture" 
				title="Мебель из нержавеющей стали" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonText="Back" 
				navButtonPress="onPressDetailBack">
				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page 
				id="master" 
				title="Steel Store" 
				icon="sap-icon://action" 
				class="sapUiStdPage">
				<content>
					<List 
						items = "{myModel>/Menu}">

						<items>
							<StandardListItem 
							title="{myModel>title}" 
							type="{path:'myModel>show_nav_button', 
							formatter:'.menuItemType'}" 
							press="onMenuItemPress"/>
						</items>
					</List>
				</content>
			</Page>
			<Page 
				id="catalog" 
				title="Уточните категорию" 
				icon="sap-icon://action" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonPress="onPressMasterBack">
				<content>
					<List
						items = "{myModel>/Categories}" >
						<items>
							<StandardListItem 
								title="{myModel>title}"
								type="Navigation" 
								press="onMenuItemPress2"/>
						</items>
					</List>
				</content>
			</Page>
			<Page 
				id="typePage" 
				title="Уточните категорию" 
				icon="sap-icon://action" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonPress="onPressMasterBack">
				<content>
					<List items = "{myModel>/Categories}" id="typeList">
						<items>
							<StandardListItem 
								title="{myModel>type_name}" 
								type="Navigation" 
								press="onMenuItemPress3"/>
						</items>
					</List>
				</content>
			</Page>
			<Page 
				id="articles" 
				title="Выберите товар" 
				icon="sap-icon://action" 
				class="sapUiStdPage" 
				showNavButton="true"
				navButtonPress="onPressMasterBack">
				<content>
					<List items = "{myModel>/Articles}" id="articlesList">
						<items>
							<StandardListItem 
								title="{myModel>article_name}" 
								type="Active" 
								press="onTypeItemPress4"/>
						</items>
					</List>
				</content>
			</Page>

		</masterPages>
	</SplitApp>
</mvc:View>