<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="mainpath.controller.mainController"
	xmlns="sap.m">
	<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<detailPages>
			<Page id="detail" title="АКЦИЯ !" class="sapUiStdPage">
				<content>
					<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" >
						<f:content>
							<Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
								<headerToolbar>
									<Toolbar height="5rem">
										<Title text="Скидка дня:"/>
									</Toolbar>
								</headerToolbar>
								<content>
									<l:HorizontalLayout>
										<Image src="/modules/mainmodule/images/T2.jpeg"/>
										<Image src="/modules/mainmodule/images/T7.jpeg"/>
										<Image src="/modules/mainmodule/images/T8.jpeg"/>
										<Image src="/modules/mainmodule/images/T11.jpeg"/>
									</l:HorizontalLayout>
									<Text text="Успейте купить нашу хрень со скидкой. Стоимость доставки не учтена." />
									<Button text = "Shut up and take my money!"/>
								</content>
							</Panel>
						</f:content>
					</f:SimpleForm>

				</content>
			</Page>
			<Page id="ProtectiveConstructions" title="Отбойники из черного металла" class="sapUiStdPage" showNavButton="true"
					navButtonText="Back" navButtonPress="onPressDetailBack">
				<content>
					<VBox class="sapUiSmallMargin">
						<Label text="This is Detail Page2" />
					</VBox>
				</content>
			</Page>
			<Page id="FrameConstructions" title="Каркасные конструкции, навесы" class="sapUiStdPage" showNavButton="true"
					navButtonText="Back" navButtonPress="onPressDetailBack">

				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
			<Page id="StainlessSteelFurniture" title="Мебель из нержавеющей стали" class="sapUiStdPage" showNavButton="true"
					navButtonText="Back" navButtonPress="onPressDetailBack">

				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master" title="Steel Store" icon="sap-icon://action" class="sapUiStdPage">
				<content>
					<List 
						items = "{myModel>/Menu}">

						<items>
							<StandardListItem 
							title="{myModel>title}" 
							type="{path:'myModel>show_nav_button', 
							formatter:'.menuItemType'}" 
							press="onMenuItemPress"/>
						</items>
					</List>
				</content>
			</Page>
			<Page id="catalog" title="Уточните категорию" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true"
					navButtonPress="onPressMasterBack">
				<content>
					<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="Защитные конструкции" type="Navigation" press="goToProtectiveConstructions"/>
							<StandardListItem title="Каркасные конструкции" type="Navigation" press="goToFrameConstructions"/>
							<StandardListItem title="Мебель из нержавеющей стали" type="Navigation" press="goToStainlessSteelFurniture"/>
						</items>
					</List>
				</content>
			</Page>
			<Page id="catalog_ProtConstructions" title="Уточните категорию" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true"
					navButtonPress="onPressMasterBack">
				<content>
					<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="Отбойники из черного металла" type="Active" custom:to="goToProtConstr_1"/>
							<StandardListItem title="Отбойники из нержавеющей стали" type="Active" custom:to="goToProtConstr_2"/>
							<StandardListItem title="Демпферы" type="Active" custom:to="goToProtConstr_3"/>
							<StandardListItem title="Защита стеллажей" type="Active" custom:to="goToProtConstr_4"/>
							<StandardListItem title="Защита пожарных шкафов" type="Active" custom:to="goToProtConstr_5"/>
						</items>
					</List>
				</content>
			</Page>
			<Page id="catalog_FrameConstructions" title="Уточните категорию" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true"
					navButtonPress="onPressMasterBack">
				<content>
					<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="Навесы" type="Active" custom:to="goToFrameConstr_1"/>
							<StandardListItem title="ПаркБоксы" type="Active" custom:to="goToFrameConstr_2"/>
						</items>
					</List>
				</content>
			</Page>
			<Page id="catalog_StainlessSteelFurniture" title="Уточните категорию" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true"
					navButtonPress="onPressMasterBack">
				<content>
					<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="Столы" type="Active" custom:to="goToSSFurniture_1"/>
							<StandardListItem title="Моечные раковины" type="Active" custom:to="goToSSFurniture_2"/>
							<StandardListItem title="Шкафы" type="Active" custom:to="goToSSFurniture_3"/>
							<StandardListItem title="Стеллажи" type="Active" custom:to="goToSSFurniture_4"/>
						</items>
					</List>
				</content>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>