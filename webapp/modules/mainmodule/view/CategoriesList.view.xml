<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="mainpath.controller.CategoriesList"
	xmlns="sap.m">
	<Page 
		id="catalog" 
		title="Уточните категорию" 
		icon="sap-icon://action" 
		class="sapUiStdPage" 
		showNavButton="true"
		navButtonPress="onCategoriesNavBack">
		<headerContent>
		</headerContent>
		<subHeader>
		</subHeader>
		<content>
			<List
				items = "{myModel>/Categories}" id="categoriesList">
				<items>
					<StandardListItem 
						title="{myModel>title}"
						type="Navigation" 
						press="onCategoriesItemPress"/>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar>
				<Button icon="sap-icon://home" width="22%" press="goToStart"/>
				<Button 
					icon="sap-icon://cart" 
					width="22%" 
					type = "{path:'myModel>/Cart/0', formatter:'.formatter_isCartNotEmpty_type'}"
					blocked="{path:'myModel>/Cart/0', formatter:'.formatter_isCartNotEmpty_blocked'}"
					press="handleResponsivePopoverPress"/>
				<Button 
					id="options"
					icon="sap-icon://customize"
					width="22%"
					press="toOptionsPopover"/>
				<Button icon="sap-icon://customer" width="22%"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>