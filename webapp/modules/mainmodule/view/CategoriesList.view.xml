<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="mainpath.controller.CategoriesList"
	xmlns="sap.m">
	<Page 
		id="catalog" 
		title="Уточните категорию" 
		icon="sap-icon://action" 
		class="sapUiStdPage" 
		showNavButton="true"
		navButtonPress="onNavBack">
		<content>
			<List
				items = "{myModel>/Categories}" id="categoryID">
				<items>
					<StandardListItem 
						title="{myModel>title}"
						type="Navigation" 
						press="onCategoriesItemPress"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>