<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="app.modules.mainmodule.controller.AdminDetailCreateNew"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:qInput = "app.modules.mainmodule.control">
	<Page 
		id="AdminCreateNew" 
		title="Администратор" 
		class="sapUiStdPage" 
		showNavButton="false"
		navButtonText="Back" 
		navButtonPress="onPressDetailBack">
		<content>
			<VBox class="sapUiSmallMargin">
				<Label text="При создании нового товара выбирайте название, максимально лаконично описывающее его характеристики. " />
				<Label text="Обратите внимание на то, что артикул созданного товара сгенерируется автоматически относительно выбранной категории и подкатегории"/>
				<f:SimpleForm id="SimpleFormChange480_12120"
					editable="true"
					layout="ResponsiveGridLayout"
					title="Новый товар"
					labelSpanXL="12"
					labelSpanL="12"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" >
					<f:content>
						<core:Title 
							text="Введите основные параметры товара" 
							icon="sap-icon://add-equipment"
							emphasized="true" />
						
						<Label text="Название" />
						<Input 
							type="Text"
							placeholder="пример: Изделие №2" 
							required = "true"  
							valueStateText = "Введите данные"/>
						<Label text="Материал" required = "false"/>
						<Label text="ПАРАМETРЫ" />
						<Input value="1000">
							<layoutData>
								<l:GridData span="XL4 L4 M3 S3" />
							</layoutData>
						</Input>
						<Input value="1000">
						</Input>
						<Input value="1000">
							<layoutData>
								<l:GridData span="XL4 L4 M3 S3" />
							</layoutData>
						</Input>
						<Label text="ПАРАМ N" />
						<MaskInput mask="999999999999" value="{myModel>/Requisition/0/INN}">
							<layoutData>
								<l:GridData span="XL3 L3 M4 S4" />
							</layoutData>
						</MaskInput>
						<Input value="" />
						<Label text="Категория / Подкатегория" />
						<Select id="categorySelect" >
							<items>
								<core:Item text="Защитные конструкции" key="Moscow"/>
								<core:Item text="Каркасные конструкции" key="Saint-Petersburg"/>
								<core:Item text="Мебель из нержавеющей стали" key="Nizhny Novgorod"/>
							</items>
						</Select>
						<Select id="typeSelect" >
							<items>
								<core:Item text="Отбойники из черного металла" key="1"/>
								<core:Item text="Отбойники из нержавеющей стали" key="2"/>
								<core:Item text="Демпферы" key="3"/>
								<core:Item text="Защита стеллажей" key="4"/>
								<core:Item text="Защита пожарных шкафов" key="5"/>
							</items>
						</Select>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
	</Page> 
</mvc:View>