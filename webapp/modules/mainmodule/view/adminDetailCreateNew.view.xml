<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"
	controllerName="app.modules.mainmodule.controller.AdminDetailCreateNew"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:MY = "app.modules.mainmodule.control">
	<Page 
		id="AdminCreateNew" 
		title="Новый товар" 
		class="sapUiStdPage" 
		showNavButton="false"
		navButtonText="Back" 
		navButtonPress="onPressDetailBack">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm 
					editable="true"
					layout="ResponsiveGridLayout"
					title="Выберите название, категорию и тип товара"
					labelSpanXL="12"
					labelSpanL="12"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" >
					<Toolbar>
						<content>
							<text
								text = "При создании нового товара выбирайте название, максимально лаконично описывающее его характеристики. Обратите внимание на то, что артикул созданного товара сгенерируется автоматически относительно выбранной категории и типа. "
								 width = "100%"/>
						</content>
					</Toolbar>
					<f:content>
						<Label text="Категория / Подкатегория" />
						<Select id="categorySelect" >
							<items>
								<core:Item text="Защитные конструкции" key="1"/>
								<core:Item text="Каркасные конструкции" key="2"/>
								<core:Item text="Мебель из нержавеющей стали" key="3"/>
							</items>
						</Select>
						<Select id="typeSelect" >
							<items>
								<core:Item text="Отбойники из черного металла" key="1"/>
								<core:Item text="Отбойники из нержавеющей стали" key="2"/>
								<core:Item text="Демпферы" key="3"/>
								<core:Item text="Защита стеллажей" key="4"/>
								<core:Item text="Защита пожарных шкафов" key="5"/>
							</items>
						</Select>
						<Select 
								id="materialSelect"
								items="{path:'myModel>/Material', templateShareable:false}"
								forceSelection="true"
								change = "changeMaterial">
								<core:Item   key="{myModel>q}" text="{myModel>name}" />
						</Select>
						<Label text="Название" />
						<Input 
							type="Text"
							placeholder="пример: Стойка сквозная из нержавеющей стали 'Стандарт'" 
							required = "true"  
							valueStateText = "Введите данные"/>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm
					title = "Введите характеристики для описания товара"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanXL="12"
					labelSpanL="12"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" >
						<Toolbar>
							<content>
							<ToolbarSpacer />
							<text
								text = "Создайте описание товара. Вводите характеристики, которые будут отображаться в карточке товара. Поле 'единицы измерения' необязательно к заполнению. Например: Свойство - Ширина, Значение - 1000, Единицы измерения - мм"
								 width = "100%"/>
							</content>
						</Toolbar>
				</f:SimpleForm>
				<Table 
					headerText = "Описание"
					
					alternateRowColors="true">
					<headerToolbar>
						<OverflowToolbar>
							<content>
								<Button id="AddNewProperty"
									text="Добавить характеристику"
									press="onFire"
									type="Emphasized"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns 
						hAlign ="End">
						<Column
							width="3em">
							<Label text="Свойство" />
						</Column>
						<Column
							width="3em">
							<Label text="Значение" />
						</Column>
						<Column
							width="3em">
							<Label text="Единицы измерения" />
						</Column>
						<Column
							width="1em">
						</Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<Input/>
							</cells>
							<cells>
								<Input/>
							</cells>
							<cells>
								<Input/>
							</cells>
							<cells>
								<Button icon = "sap-icon://decline"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<MY:TileCreated text="Текст есть" height="200px" width="100px"/>
			</VBox>
		</content>
	</Page> 
</mvc:View>